{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express","jest"],
  },
  "include": ["src/**/*.ts","tests"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "jest.setup.ts"
  ]
}
